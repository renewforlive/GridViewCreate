<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/input_column_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="@string/dialog_content_column_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_column_edit_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="請輸入行: " />

    <EditText
        android:id="@+id/input_column_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/dialog_content_hint_column"
        android:hint="@string/dialog_content_hint_column"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="@id/input_column_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/input_column_text_view"
        app:layout_constraintTop_toTopOf="@id/input_column_text_view" />

    <TextView
        android:id="@+id/input_row_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="@string/dialog_content_row_text_view"
        app:layout_constraintEnd_toStartOf="@+id/input_row_edit_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_column_text_view"
        tools:text="請輸入列: " />

    <EditText
        android:id="@+id/input_row_edit_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:autofillHints="@string/dialog_content_hint_row"
        android:hint="@string/dialog_content_hint_row"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="@id/input_row_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/input_row_text_view"
        app:layout_constraintTop_toTopOf="@id/input_row_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>